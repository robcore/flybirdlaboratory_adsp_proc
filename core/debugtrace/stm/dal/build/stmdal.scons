         'soc_xml' : ['${BUILD_ROOT}/core/debugtrace/stm/config/8974/audio/dalstmtrace.xml']
     })
     env.AddDevCfgInfo([ 'DEVCFG_CORE_QDSP6_AUDIO_SW'],
     {
         'soc_xml' : ['${BUILD_ROOT}/core/debugtrace/stm/config/8974/dalsstmcfg.xml']
     })
